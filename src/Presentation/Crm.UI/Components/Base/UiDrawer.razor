<div class="fixed inset-0 z-50 @(Open ? string.Empty : "hidden")">
  <div class="absolute inset-0 bg-black/40" @onclick="Close"></div>
  <div class="absolute right-0 top-0 h-full w-full max-w-md ui-card p-4 rounded-none shadow-lg">
    <div class="flex items-center justify-between pb-2 border-b border-white/30 dark:border-white/10">
      <h2 class="text-lg font-semibold">@Title</h2>
      <button class="h-8 w-8 rounded-lg inline-flex items-center justify-center hover:bg-white/60 dark:hover:bg-slate-700/50" @onclick="Close" aria-label="Close">
        <svg viewBox="0 0 24 24" class="h-4 w-4" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M6 6l12 12"></path>
          <path d="M18 6l-12 12"></path>
        </svg>
      </button>
    </div>
    <div class="py-4">
      @ChildContent
    </div>
    @if (Footer is not null)
    {
      <div class="pt-2 border-t border-white/30 dark:border-white/10">
        @Footer
      </div>
    }
  </div>
</div>


