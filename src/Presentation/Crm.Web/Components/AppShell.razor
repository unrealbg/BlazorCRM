@rendermode InteractiveServer
@implements IDisposable

<CascadingAuthenticationState>
  <div aria-hidden class="pointer-events-none fixed inset-0 -z-10 overflow-hidden">
    <div class="absolute -top-24 -left-24 h-80 w-80 rounded-full bg-gradient-to-br from-brand-500/20 to-accent-500/10 blur-3xl"></div>
    <div class="absolute bottom-0 right-0 h-96 w-96 rounded-full bg-gradient-to-tl from-accent-500/20 to-brand-500/10 blur-3xl"></div>
  </div>

  <aside id="sidebar" class="crm-sidebar hidden lg:flex fixed inset-y-0 left-0 w-[280px] z-50 glass backdrop-blur-md border-r border-white/30 dark:border-white/10 @(SidebarCollapsed ? "is-collapsed" : string.Empty)">
    <div class="flex flex-col w-full">
      <div class="px-5 pt-5 pb-3 border-b border-white/30 dark:border-white/10">
        <a href="/" class="flex items-center gap-3">
          <span class="inline-flex h-10 w-10 items-center justify-center rounded-2xl bg-gradient-to-tr from-brand-600 to-accent-500 text-white shadow">
            <svg viewBox="0 0 24 24" class="h-5 w-5" fill="currentColor"><path d="M12 2l9 5v10l-9 5-9-5V7l9-5z"/></svg>
          </span>
          <div>
            <div class="text-base font-semibold leading-none">BlazorCRM</div>
            <div class="text-[11px] text-slate-500 dark:text-slate-400">Clean - Multi-tenant</div>
          </div>
        </a>
      </div>

      <SidebarNav />

      <div class="mt-auto p-3 space-y-3">
        <div class="crm-profile">
          <div class="crm-profile-main">
            <img src="https://i.pravatar.cc/64" alt="Profile" class="crm-avatar" />
            <div class="crm-profile-text">
              <div class="crm-profile-name">Alex Johnson</div>
              <div class="crm-profile-email">alex@blazorcrm.com</div>
            </div>
          </div>
          <a class="crm-profile-settings" href="/settings" aria-label="Open settings">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.6" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="3"></circle><path d="M19 12a7 7 0 0 0-.1-1l2-1.2-2-3.5-2.3.9a7 7 0 0 0-1.7-1l-.3-2.5H9.4l-.3 2.5a7 7 0 0 0-1.7 1l-2.3-.9-2 3.5 2 1.2a7 7 0 0 0 0 2l-2 1.2 2 3.5 2.3-.9a7 7 0 0 0 1.7 1l.3 2.5h4.2l.3-2.5a7 7 0 0 0 1.7-1l2.3.9 2-3.5-2-1.2c.1-.3.1-.7.1-1z"></path></svg>
          </a>
        </div>
        <div class="flex items-center justify-between text-xs text-slate-500 dark:text-slate-400">
          <span>v0.3</span>
          <div class="flex items-center gap-2">
            <button id="toggleCollapse" type="button" class="crm-icon-button" @onclick="ToggleSidebarCollapse" aria-label="Toggle collapsed sidebar">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.6" stroke-linecap="round" stroke-linejoin="round">
                <path d="M15 19l-7-7 7-7"></path>
                <path d="M4 12h16"></path>
              </svg>
            </button>
            <button id="toggleTheme" type="button" class="crm-icon-button" @onclick="ToggleTheme" aria-label="Toggle theme">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.6" stroke-linecap="round" stroke-linejoin="round"><path d="M12 3a7 7 0 1 0 7 7"></path><path d="M12 3a9 9 0 1 1-9 9"></path></svg>
            </button>
          </div>
        </div>
      </div>
    </div>
  </aside>

  @if (MobileNav.IsOpen)
  {
    <div class="fixed inset-0 z-50 lg:hidden" role="dialog" aria-modal="true" aria-label="Mobile navigation">
      <div class="fixed inset-0 bg-slate-900/50 backdrop-blur-sm" @onclick="CloseMobileNav"></div>
      <div class="fixed inset-y-0 left-0 w-72 glass backdrop-blur-md border-r border-white/30 dark:border-white/10 transform transition-transform duration-300">
        <div class="flex flex-col h-full">
          <div class="px-5 pt-5 pb-3 border-b border-white/30 dark:border-white/10 flex items-center justify-between">
            <a href="/" class="flex items-center gap-3">
              <span class="inline-flex h-10 w-10 items-center justify-center rounded-2xl bg-gradient-to-tr from-brand-600 to-accent-500 text-white shadow">
                <svg viewBox="0 0 24 24" class="h-5 w-5" fill="currentColor"><path d="M12 2l9 5v10l-9 5-9-5V7l9-5z"/></svg>
              </span>
              <div>
                <div class="text-base font-semibold leading-none">BlazorCRM</div>
                <div class="text-[11px] text-slate-500 dark:text-slate-400">Clean - Multi-tenant</div>
              </div>
            </a>
            <button @onclick="CloseMobileNav" class="crm-icon-button" aria-label="Close menu">
              <svg viewBox="0 0 24 24" class="h-5 w-5" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M6 18L18 6M6 6l12 12"></path>
              </svg>
            </button>
          </div>

          <SidebarNav OnNavigate="CloseMobileNav" />

          <div class="mt-auto p-3 space-y-3">
            <div class="crm-profile">
              <div class="crm-profile-main">
                <img src="https://i.pravatar.cc/64" alt="Profile" class="crm-avatar" />
                <div class="crm-profile-text">
                  <div class="crm-profile-name">Alex Johnson</div>
                  <div class="crm-profile-email">alex@blazorcrm.com</div>
                </div>
              </div>
              <a class="crm-profile-settings" href="/settings" aria-label="Open settings">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.6" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="3"></circle><path d="M19 12a7 7 0 0 0-.1-1l2-1.2-2-3.5-2.3.9a7 7 0 0 0-1.7-1l-.3-2.5H9.4l-.3 2.5a7 7 0 0 0-1.7 1l-2.3-.9-2 3.5 2 1.2a7 7 0 0 0 0 2l-2 1.2 2 3.5 2.3-.9a7 7 0 0 0 1.7 1l.3 2.5h4.2l.3-2.5a7 7 0 0 0 1.7-1l2.3.9 2-3.5-2-1.2c.1-.3.1-.7.1-1z"></path></svg>
              </a>
            </div>
            <div class="flex items-center justify-between text-xs text-slate-500 dark:text-slate-400">
              <span>v0.3</span>
              <button id="toggleThemeMobile" type="button" class="crm-icon-button" @onclick="ToggleTheme" aria-label="Toggle theme">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.6" stroke-linecap="round" stroke-linejoin="round"><path d="M12 3a7 7 0 1 0 7 7"></path><path d="M12 3a9 9 0 1 1-9 9"></path></svg>
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  }

  <div class="crm-shell min-h-svh flex flex-col lg:ml-[280px]">
    <HeaderBar />

    <main class="flex-1 crm-main">
      <div class="crm-content max-w-screen-2xl mx-auto p-4 lg:p-6">
        <Routes />
      </div>
    </main>

    <footer class="crm-footer glass backdrop-blur-md border-t border-white/30 dark:border-white/10 text-xs">
      <div class="max-w-screen-2xl mx-auto h-10 px-3 flex items-center justify-between">
        <div class="text-slate-500 dark:text-slate-400">(c) <span id="year"></span> BlazorCRM - Clean Architecture</div>
        <div class="flex items-center gap-3 text-slate-500 dark:text-slate-400"><a class="hover:underline" href="#">Privacy</a><a class="hover:underline" href="#">Terms</a><a class="hover:underline" href="#">Status</a></div>
      </div>
    </footer>
  </div>

  <QuickCreateModal />
  <MobileQuickAdd />

  <div id="searchOverlay" class="crm-search-overlay fixed inset-0 z-[70] hidden">
    <div class="crm-search-backdrop" data-search-close></div>
    <div class="crm-search-panel">
      <div class="flex items-center gap-2">
        <input id="searchOverlayInput" type="search" class="input w-full" placeholder="Search everything..." autocomplete="off" />
        <span class="text-[11px] text-slate-500">Esc</span>
      </div>
      <div id="searchOverlayResults" class="mt-3 max-h-[70vh] overflow-auto"></div>
    </div>
  </div>

  <div id="toasts" class="fixed bottom-4 right-4 space-y-2 z-[60]"></div>
</CascadingAuthenticationState>
