@using Crm.Application.Notifications

<div id="notificationsPanel" class="crm-notifications-panel hidden" @onclick="@(() => ClosePanel())">
    <div class="crm-notifications-content" @onclick:stopPropagation="true">
        <div class="crm-notifications-header">
            <div class="flex items-center justify-between">
                <h2 class="text-lg font-semibold">Notifications</h2>
                <button @onclick="ClosePanel" class="crm-icon-btn" aria-label="Close">
                    <svg viewBox="0 0 24 24" class="h-5 w-5" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                </button>
            </div>
            @if (UnreadCount > 0)
            {
                <div class="text-sm text-slate-500 mt-1">@UnreadCount unread</div>
            }
        </div>

        <div class="crm-notifications-list">
            @if (Notifications.Count == 0)
            {
                <div class="crm-empty-state">
                    <svg viewBox="0 0 24 24" class="h-12 w-12 text-slate-300 dark:text-slate-600 mb-2" fill="none" stroke="currentColor" stroke-width="1.5">
                        <path d="M18 8a6 6 0 0 0-12 0c0 7-3 7-3 7h18s-3 0-3-7"></path>
                        <path d="M13.73 21a2 2 0 0 1-3.46 0"></path>
                    </svg>
                    <p class="text-slate-500">No notifications yet</p>
                </div>
            }
            else
            {
                @foreach (var notif in Notifications)
                {
                    <div class="crm-notification-item @(notif.IsRead ? "read" : "unread")">
                        <div class="flex items-start gap-3">
                            <div class="crm-severity-chip crm-severity-@notif.Severity.ToLower()">
                                @notif.Severity
                            </div>
                            <div class="flex-1 min-w-0">
                                <p class="text-sm">@notif.Message</p>
                                <p class="text-xs text-slate-500 mt-1">@FormatTimestamp(notif.CreatedAtUtc)</p>
                            </div>
                            @if (!notif.IsRead)
                            {
                                <button @onclick="@(() => MarkAsRead(notif.Id))" class="crm-icon-btn-sm" aria-label="Mark as read">
                                    <svg viewBox="0 0 24 24" class="h-4 w-4" fill="none" stroke="currentColor" stroke-width="2">
                                        <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
                                        <polyline points="22 4 12 14.01 9 11.01"></polyline>
                                    </svg>
                                </button>
                            }
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>
