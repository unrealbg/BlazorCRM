@inject Crm.Web.Services.ThemeState Theme
<!doctype html>
<html lang="en" class="h-full scroll-smooth @(Theme.IsDark ? "dark" : string.Empty)">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>BlazorCRM - Signature UI v0.3</title>
  <meta name="description" content="Compact header, sticky full-height sidebar, and footer for a premium CRM shell."/>
  <HeadOutlet />
  <base href="/" />
  <AntiforgeryToken />

  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
  <link rel="icon" type="image/png" href="favicon.png" />

  <link rel="stylesheet" href="css/site.css" />
  <link rel="stylesheet" href="css/app.css" />
</head>
<body class="min-h-svh bg-gradient-to-br from-slate-50 via-white to-slate-100 dark:from-slate-950 dark:via-slate-900 dark:to-slate-950 text-slate-800 dark:text-slate-100 @(Theme.IsDark ? "dark" : string.Empty)">
