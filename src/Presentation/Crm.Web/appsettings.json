{
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=blazor_crm;Username=postgres;Password=postgres"
  },
  "Jwt": {
    "Issuer": "BlazorCrm",
    "Audience": "BlazorCrmClients",
    "Key": "CHANGE_ME_TO_A_LONG_RANDOM_SECRET_KEY"
  },
  "Tenancy": {
    "DefaultTenantSlug": "demo",
    "DefaultTenantName": "Demo",
    "BaseDomains": ["crm.example.com"]
  },
  "Attachments": {
    "UploadsRootPath": "wwwroot/uploads",
    "MaxFileSizeBytes": 10485760,
    "AllowedContentTypes": [
      "application/pdf",
      "image/jpeg",
      "image/png",
      "image/gif",
      "text/plain",
      "application/msword",
      "application/vnd.openxmlformats-officedocument.wordprocessingml.document",
      "application/vnd.ms-excel",
      "application/vnd.openxmlformats-officedocument.spreadsheetml.sheet"
    ]
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "Enrich": ["FromLogContext", "WithCorrelationId"],
    "WriteTo": [
      { "Name": "Console" },
      { "Name": "Seq", "Args": { "serverUrl": "http://localhost:5341" } }
    ]
  },
  "Seed": {
    "DemoData": false,
    "Roles": ["Admin", "User"],
    "AdminEmail": "admin@local",
    "AdminPassword": "Admin123$"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
